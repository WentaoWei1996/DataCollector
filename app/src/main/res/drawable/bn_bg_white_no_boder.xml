<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/product_item" android:state_selected="true" />
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:angle="270.0" android:color="@color/product_item" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:angle="270.0" android:color="@android:color/white" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
</selector>